<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_myjf_jfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在获取积分"
                android:layout_gravity="center"
                android:padding="30dp"
                android:textSize="18sp"
                android:textColor="@color/design_default_color_on_secondary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换礼品"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="left"/>
            <LinearLayout
                android:id="@+id/ll_exchangevip_jfa"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="16sp"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="兑换永久VIP"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VIP价值随数据库笔记数量的变化而变化"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_vip_jf"
                        android:layout_width="wrap_content"
                        android:padding="20dp"
                        android:textSize="16sp"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:layout_height="wrap_content"
                        android:text="100积分"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/WhiteSmoke"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_exchangecjq_jfa"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="兑换抽奖券"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="25积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="更多礼品 敬请期待" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分规则"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="left"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布存档类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="+4积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布dex修改类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="+4积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布dll修改类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="+5积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布dat-so修改类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="+5积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布so修改类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="+6积分"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布其他类型笔记"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_height="wrap_content"
                    android:text="视情况而定"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/WhiteSmoke"/>
            <LinearLayout
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="发布笔记后，会由管理员审核。如优则额外加1-2分，如质量不佳则少加1-2分。"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>