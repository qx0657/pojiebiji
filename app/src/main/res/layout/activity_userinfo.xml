<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_userinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="我的头像"
                android:textSize="16sp"
                android:layout_weight="1"
                android:padding="20dp"
                android:textColor="@color/design_default_color_on_secondary"/>
            <com.qx.pjbj.view.OvalImageView
                android:id="@+id/iv_user_head_userinfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:radius="25dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="16dp"
                app:srcCompat="@drawable/default_head" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke"/>
        <LinearLayout
            android:id="@+id/ll_uid_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的UID"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/design_default_color_on_secondary"/>
            <TextView
                android:id="@+id/tv_user_uid_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke"/>
        <LinearLayout
            android:id="@+id/ll_nick_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/design_default_color_on_secondary"/>
            <TextView
                android:id="@+id/tv_user_nick_userinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/WhiteSmoke"/>
        <LinearLayout
            android:id="@+id/ll_exchangevip_userinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="?android:attr/selectableItemBackground"
            >
            <TextView
                android:id="@+id/tv_dhvip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换VIP"
                android:textSize="16sp"
                android:padding="10dp"
                android:textColor="@color/design_default_color_on_secondary"/>
            <TextView
                android:id="@+id/tv_myvipinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>