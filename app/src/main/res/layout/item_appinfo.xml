<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_appicon_item_appinfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/default_head"/>
    <TextView
        android:id="@+id/tv_appname_item_appinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_appicon_item_appinfo"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="20dp"
        android:textSize="16sp"
        android:textColor="@color/design_default_color_on_secondary"
        android:text="应用名"/>
    <TextView
        android:id="@+id/tv_apppkname_item_appinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_appname_item_appinfo"
        app:layout_constraintStart_toEndOf="@id/iv_appicon_item_appinfo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="com.123.321"/>
</androidx.constraintlayout.widget.ConstraintLayout>